[
  {
    "name": "echo",
    "image": "jmalloc/echo-server:latest",
    "cpu": 10,
    "memory": 512,
    "essential": true,
    "portMappings": [
      {
        "containerPort": 8080,
        "hostPort": 80
      }
    ]
  },
  {
    "name": "nginx_proxy",
    "image": "nacyot/nginx_proxy:200626",
    "cpu": 10,
    "memory": 256,
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 80,
        "protocol": "tcp"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${ log_group }",
        "awslogs-region": "${ region }"
      }
    },
    "environment": [
      {
        "name": "NGINX_PROXY_PATH",
        "value": "${ proxy_path }"
      }
    ],
    "ulimits": [
      {
        "name": "nofile",
        "softLimit": 65536,
        "hardLimit": 65536
      }
    ],
    "systemControls": [
      {
        "namespace": "net.ipv4.ip_local_port_range",
        "value": "1024 65000"
      },
      {
        "namespace": "net.ipv4.tcp_syn_retries",
        "value": "5"
      }
    ]
  }
]